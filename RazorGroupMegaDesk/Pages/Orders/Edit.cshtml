@page "{id:int?}"
@model RazorGroupMegaDesk.Pages.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Desk Quote</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-8 border rounded shadow py-3 px-4 bg-white">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group my-2">
                        <label asp-for="Order.CustomerName" class="control-label fw-bold"></label>
                        <input asp-for="Order.CustomerName" class="form-control" />
                        <span asp-validation-for="Order.CustomerName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group my-2">
                        <label asp-for="Order.OrderDate" class="control-label fw-bold"></label>
                        <input asp-for="Order.OrderDate" class="form-control" />
                        <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group my-2">
                        <label asp-for="Order.Width" class="control-label fw-bold"></label>
                        <input asp-for="Order.Width" class="form-control" />
                        <span asp-validation-for="Order.Width" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group my-2">
                        <label asp-for="Order.Depth" class="control-label fw-bold"></label>
                        <input asp-for="Order.Depth" class="form-control" />
                        <span asp-validation-for="Order.Depth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group my-2">
                        <label asp-for="Order.Drawers" class="control-label fw-bold"></label>
                        <input asp-for="Order.Drawers" class="form-control" />
                        <span asp-validation-for="Order.Drawers" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group my-2">
                        <label asp-for="Order.SurfMaterial" class="control-label fw-bold"></label>
                        <input asp-for="Order.SurfMaterial" class="form-control" />
                        <span asp-validation-for="Order.SurfMaterial" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group my-2">
                        <label asp-for="Order.RushOrder" class="control-label fw-bold"></label>
                        <select class="form-select" id="rushOrder" asp-items="Model.RushOrderOptions" asp-for="Order.RushOrder">
                        </select>
                        <span asp-validation-for="Order.RushOrder" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <a asp-page="./Index" class="btn btn-outline-secondary w-100">Cancel</a>
                    </div>
                </div>
                <div class="col-md-6 mt-2 mt-md-0">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
