@page
@model RazorGroupMegaDesk.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="bg-white border rounded px-4 py-2">
    <div class="row justify-content-between align-items-center">
        <div class="col">
            <h1>Desk Quotes</h1>
        </div>
        <div class="col-sm-4 col-md-3 col-lg-2">
            <a asp-page="Create" class="btn btn-success w-100">Create New</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].Width)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].Depth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].Drawers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].SurfMaterial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].RushOrder)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Width)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Depth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Drawers)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SurfMaterial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RushOrder)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary mx-0 mx-lg-2 my-1 my-lg-0">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>