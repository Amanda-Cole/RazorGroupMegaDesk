@page
@model RazorGroupMegaDesk.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="bg-white border rounded px-4 py-2">
    <div class="row justify-content-between align-items-center">
        <div class="col">
            <h1>Desk Quotes</h1>
        </div>
        <div class="col-sm-4 col-md-3 col-lg-2">
            <a asp-page="Create" class="btn btn-success w-100">Create New</a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-6">
            <form>
                <div class="input-group my-3">
                    <span class="input-group-text">Name</span>
                    <input type="text" asp-for="SearchString" class="form-control" />
                    <button class="btn btn-outline-secondary" type="submit">Filter</button>
                </div>
            </form>
        </div>
    </div>
    <div class="table-container">
        <table class="table w-100">
            <thead>
                <tr>
                    <th>
                        <a class="sortable" asp-page-handler="SortByName">
                            @Html.DisplayNameFor(model => model.Order[0].CustomerName) <span class="arrow">&#x25BD</span>
                        </a>
                    </th>
                    <th>
                        <a class="sortable" asp-page-handler="SortByDate">
                            @Html.DisplayNameFor(model => model.Order[0].OrderDate) <span class="arrow">&#x25BD</span>
                        </a>
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Order[0].Width)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Order[0].Depth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Order[0].Drawers)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Order[0].SurfMaterial)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Order[0].RushOrder)
                    </th>
                    <th>
                        Total
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Order)
                {
                    string total = item.CalculateTotal();
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Width)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Depth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Drawers)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SurfMaterial)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RushOrder)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => total)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary mx-0 mx-lg-2 my-1 my-xl-0">Details</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
